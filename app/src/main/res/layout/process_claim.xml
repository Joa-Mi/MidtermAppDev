<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Modern Title Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="#1E3A5F"
            android:elevation="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/back"
                android:src="@android:drawable/ic_media_previous" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/process_claim"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Item Card -->
        <include layout="@layout/item_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp" />

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <!-- Claimer Information Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            android:background="#70F0F0F0"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/claimer_information"
                android:textColor="#1A1A1A"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/proofLabel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/please_answer_the_following_claimer_name_and_id_required"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <!-- Claimer Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/full_name"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="6dp" />

            <EditText
                android:id="@+id/claimerNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/edit_text"
                android:hint="Enter full name"
                android:padding="14dp"
                android:textSize="14sp"
                android:textColor="#1A1A1A"
                android:textColorHint="#AAAAAA"
                android:layout_marginBottom="12dp" />

            <!-- Claimer ID -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="School ID"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="6dp" />

            <EditText
                android:id="@+id/claimerIdInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/edit_text"
                android:hint="Enter ID number"
                android:padding="14dp"
                android:textSize="14sp"
                android:textColor="#1A1A1A"
                android:textColorHint="#AAAAAA"
                android:layout_marginBottom="20dp" />

            <!-- Proof of Ownership Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/proof_of_ownership"
                android:textColor="#1A1A1A"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Proof images -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="#F5F5F5">

                    <ImageView
                        android:id="@+id/proof1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="Proof image 1"
                        android:scaleType="centerCrop" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="#F5F5F5">

                    <ImageView
                        android:id="@+id/proof2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="Proof image 2"
                        android:scaleType="centerCrop" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="#F5F5F5">

                    <ImageView
                        android:id="@+id/proof3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="Proof image 3"
                        android:scaleType="centerCrop" />
                </FrameLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/proofLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/upload_at_least_one_photo_as_proof"
                android:textColor="#757575"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- ðŸŸ¦ Description Section (Clean & Consistent) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            android:background="#70F0F0F0"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="16sp"
                android:textColor="#1A1A1A"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/claimerDescriptionInput"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@android:drawable/edit_text"
                android:gravity="top|start"
                android:hint="Describe your ownership or additional details"
                android:padding="14dp"
                android:textSize="14sp"
                android:textColor="#1A1A1A"
                android:textColorHint="#AAAAAA"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:scrollbars="vertical" />
        </LinearLayout>

        <!-- Finder Information Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            android:background="#70F0F0F0"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/finder_information"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#1A1A1A"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONTACT NUMBER"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#757575"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/finderContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F8F8F8"
                android:padding="14dp"
                android:text=""
                android:textColor="#424242"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- Where to Claim Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            android:background="#70F0F0F0"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Collection Point"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#1A1A1A"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/claimLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F8F8F8"
                android:padding="14dp"
                android:text="Will be provided by admin"
                android:textColor="#424242"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- Claim Button -->
        <Button
            android:id="@+id/btnClaim"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="#1E3A5F"
            android:text="Submit Claim Request"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>