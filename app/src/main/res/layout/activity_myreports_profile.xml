<?xml version="1.0" encoding="utf-8"?>
<!-- activity_main.xml - Main Activity Layout -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gradient_header"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Reports"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track your reported items"
            android:textSize="14sp"
            android:textColor="#E0E7FF"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Tabs -->
    <HorizontalScrollView
        android:id="@+id/tabScrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:background="#FFFFFF"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/tabPending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:minWidth="90dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_clock"
                        app:tint="#9CA3AF" />

                    <TextView
                        android:id="@+id/badgePending"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/badge_background_yellow"
                        android:text="0"
                        android:textSize="10sp"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:layout_gravity="top|end"
                        android:layout_marginStart="-8dp"
                        android:layout_marginTop="-8dp"/>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending"
                    android:textSize="12sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tabApproved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:minWidth="90dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_check_circle"
                         app:tint="#9CA3AF"
                        tools:ignore="UseAppTint" />

                    <TextView
                        android:id="@+id/badgeApproved"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/badge_background_blue"
                        android:text="0"
                        android:textSize="10sp"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:layout_gravity="top|end"
                        android:layout_marginStart="-8dp"
                        android:layout_marginTop="-8dp"/>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Approved"
                    android:textSize="12sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tabClaimed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:minWidth="90dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/badgeClaimed"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/badge_background_green"
                        android:text="0"
                        android:textSize="10sp"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:layout_gravity="top|end"
                        android:layout_marginStart="-8dp"
                        android:layout_marginTop="-8dp"/>
                </FrameLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_package"
                    app:tint="#9CA3AF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Claimed"
                    android:textSize="12sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tabRejected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:minWidth="90dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_x_circle"
                         app:tint="#9CA3AF"
                        tools:ignore="UseAppTint" />

                    <TextView
                        android:id="@+id/badgeRejected"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/badge_background_red"
                        android:text="0"
                        android:textSize="10sp"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:layout_gravity="top|end"
                        android:layout_marginStart="-8dp"
                        android:layout_marginTop="-8dp"/>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rejected"
                    android:textSize="12sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- RecyclerView for Items -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewItems"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tabScrollView"
        app:layout_constraintBottom_toTopOf="@id/summaryCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyStateLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/recyclerViewItems"
        app:layout_constraintBottom_toBottomOf="@id/recyclerViewItems"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/emptyStateIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_clock"
            app:tint="#9CA3AF" />

        <TextView
            android:id="@+id/emptyStateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No pending items"
            android:textSize="16sp"
            android:textColor="#6B7280"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/emptyStateMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your pending reports will appear here"
            android:textSize="14sp"
            android:textColor="#9CA3AF"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- Summary Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/summaryCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/summaryPending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#4F46E5"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending"
                    android:textSize="10sp"
                    android:textColor="#6B7280"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/summaryApproved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#4F46E5"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Approved"
                    android:textSize="10sp"
                    android:textColor="#6B7280"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/summaryClaimed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#4F46E5"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Claimed"
                    android:textSize="10sp"
                    android:textColor="#6B7280"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/summaryRejected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#4F46E5"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rejected"
                    android:textSize="10sp"
                    android:textColor="#6B7280"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
