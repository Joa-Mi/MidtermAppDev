<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Claimant Name -->
        <TextView
            android:id="@+id/tvClaimantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Claimant: John Doe"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <!-- Item Name -->
        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item: iPhone 13 Pro"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <!-- Claimant Email -->
        <TextView
            android:id="@+id/tvClaimantEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: john@example.com"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp" />

        <!-- Claimant Phone -->
        <TextView
            android:id="@+id/tvClaimantPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone: +1-234-567-8900"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description: This is my phone, I lost it at the mall"
            android:textSize="13sp"
            android:textColor="#888888"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginBottom="12dp" />

        <!-- Status -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Pending"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="#FF9800"
            android:layout_marginBottom="12dp" />

        <!-- Action Buttons Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Reject Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnReject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reject"
                android:textSize="12sp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_reject_background"
                android:textColor="#FFFFFF" />

            <!-- Approve Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnApprove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approve"
                android:textSize="12sp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:background="@drawable/button_approve_background"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>