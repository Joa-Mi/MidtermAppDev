<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- SECTION 1: REPORTED ITEM INFORMATION -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“¦ Reported Item"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1E3A5F"
            android:layout_marginBottom="12dp" />

        <!-- Item Image -->
        <ImageView
            android:id="@+id/ivItemImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:contentDescription="Item Image"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="12dp" />

        <!-- Item Name -->
        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="6dp" />

        <!-- Item Category -->
        <TextView
            android:id="@+id/tvItemCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category: Personal Belongings"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="4dp" />

        <!-- Item Location -->
        <TextView
            android:id="@+id/tvItemLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Found at: Library"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="4dp" />

        <!-- Item Date -->
        <TextView
            android:id="@+id/tvItemDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date Found: 10/16/2025"
            android:textSize="13sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="16dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp" />

        <!-- SECTION 2: CLAIMANT INFORMATION -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‘¤ Claimant Information"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1E3A5F"
            android:layout_marginBottom="12dp" />

        <!-- Claimant Name -->
        <TextView
            android:id="@+id/tvClaimantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Claimant: John Doe"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_marginBottom="6dp" />

        <!-- Claimant ID -->
        <TextView
            android:id="@+id/tvClaimantId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="School ID: 12-3456"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description: This is my item, I lost it at the library"
            android:textSize="13sp"
            android:textColor="#666666"
            android:maxLines="4"
            android:ellipsize="end"
            android:layout_marginBottom="12dp" />

        <!-- Proof of Ownership Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“¸ Proof of Ownership"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <!-- Proof Images Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/ivProof1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                android:contentDescription="Proof 1"
                android:background="#F5F5F5"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivProof2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                android:contentDescription="Proof 2"
                android:background="#F5F5F5"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivProof3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                android:contentDescription="Proof 3"
                android:background="#F5F5F5"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp" />

        <!-- Status -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Pending"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#FF9800"
            android:layout_marginBottom="8dp" />

        <!-- Claim Location (shown when approved) -->
        <TextView
            android:id="@+id/tvClaimLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Claim at: SG CCMS"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />

        <!-- Action Buttons Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <!-- Delete Button (only for rejected claims) -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textSize="12sp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_delete_background"
                android:textColor="#FFFFFF"
                android:visibility="gone" />

            <!-- Reject Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnReject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reject"
                android:textSize="12sp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_reject_background"
                android:textColor="#FFFFFF"
                android:visibility="visible" />

            <!-- Approve Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnApprove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approve"
                android:textSize="12sp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:background="@drawable/button_approve_background"
                android:textColor="#FFFFFF"
                android:visibility="visible" />

            <!-- Claimed Button (shown when approved) -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnClaimed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mark as Claimed"
                android:textSize="12sp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:background="@drawable/button_approve_background"
                android:textColor="#FFFFFF"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>